
<img src="assets/images/background.gif" id="bg" alt="8 bit cityscape">

<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand">Gamespot News Scraper</a>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#">Articles<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="saved.html">Saved</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/scrape">Scrape</a>
      </li>
    </ul>
  </div>
</nav>

<div class="container">

  <div class="row">
    <div class="jumbotron jumbotron-fluid">
      <div class="container" id="indexJumbo">
        <h1 class="display-3" id="jumboTitle">Hit the Scrape tab above to get started</h1>
        <h3>Most recent articles from <a href="https://www.gamespot.com" target="blank">Gamespot</a> will be displayed below</h3>
      </div>
    </div>
  </div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h1>{{this.title}}</h1>
            <h3>{{this.subtitle}}</h3>
        </div>
    </div>
</div>

<div id="articles">
    {{#each articles}}
        <div class="well">
            <div class="row">
                <div class="col col-md-8">
                    <h4><a href="{{this.link}}">{{this.title}}</a></h4>
                </div>
                <div class="col col-md-2">
                    <form class="form-inline" action="d/articles/save/{{this.id}}" method="POST">
                        <button type="submit" class="btn btn-success">Save Article</button>
                    </form>
                </div>
                <div class="col col-md-2">
                    <form class="form-inline" action="/articles/delete/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-warning">Unsave Article</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>
